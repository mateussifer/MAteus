number1 = int(input("Diga o primeiro numero: "))
number2 = int(input("Diga o segundo numero: "))
number3 = int(input("Diga o terceiro numero: "))
media_arit = (number1 + number2 + number3) / 3
media_pond = (number1 * 2), (number2 * 2), (number3 * 3)
media_pond2 = (number1 * 1), (number2 * 2), (number2 * 2)
print("Media aritmetica:", media_arit)
print("Media ponderada peso 2, 2 e 3", media_pond)
print("Media ponderada peso 1, 2 e 2:", media_pond2)
